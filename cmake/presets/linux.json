{
	"version": 5,
	"include": [
		"common.json",
		"generators.json",
		"compilers.json"
	],
	"configurePresets": [
		{
			"name": "linux-default",
			"hidden": true,
			"condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" },
			"cacheVariables": {
				"GXZN_GXZN_CHRONO_DEFINITIONS_INIT": "GXZN_GXZN_CHRONO_LINUX;GXZN_GXZN_CHRONO_UNIX"
			}
		},
		{
			"name": "ninja-gcc-linux64",
			"hidden": true,
			"inherits": [ "linux-default", "gcc", "ninja" ]
		},
		{
			"name": "ninja-clang-linux64",
			"hidden": true,
			"inherits": [ "linux-default", "clang", "ninja" ]
		}
	]
}
